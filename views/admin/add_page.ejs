<%- include("../_layouts/adminheader") %>
<br/>

<div class="jumbotron">
	<h1 class="text-center"><strong>Welcome Admin.</strong></h1>
	<hr/>
	<h2 class="text-center"> You can now add a Page.</h2>
</div>

<div class="row">
	<div class="col-sm-12 text-center">
		<a href="/admin/pages" class="btn btn-primary">Back to Page List</a>
	</div>
</div>


<div class="row">
	<div class="col-sm-12">
		<br/>
		<br/>
		<h2 style="page-decoration:underline">Page Addition Form</h2>

		<form method="post" action="/admin/pages/add-page">
			<div class="form-group">
				<label for="">Title</label>
				<input type="text" class="form-control capitalize-text" name="title" value="<%= title %>" placeholder="Title">
			</div>
			
			<div class="form-group">
				<label for="">Slug</label>
				<input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Slug">
			</div>

			<div class="form-group">
				<label for="">Content</label>
				<textarea id="text-area" class="form-control" name="content" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
			</div>

			<button class="btn btn-default">Submit</button>
		</form>
	</div>
</div>

<%- include("../_layouts/adminfooter") %>